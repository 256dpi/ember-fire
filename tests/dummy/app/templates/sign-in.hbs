<h2>Sign In</h2>

<form {{action "authenticate" on="submit"}}>
  <p>
    <label>Email</label><br>
    <Input @type="email" @value={{this.email}}/>
  </p>

  <p>
    <label>Password</label><br>
    <Input @type="password" @value={{this.password}}/>
  </p>

  {{#if this.error}}
    <p>{{this.error}}</p>
  {{/if}}

  <p>
    <button type="submit" {{action "signIn"}}>
      Sign In
    </button>
  </p>
</form>