<h1>Add Item</h1>

<form {{action "create" on="submit"}}>
  <p>
    <label>Name</label>
    {{input value=model.name placeholder="Name"}}
  </p>

  <p>
    <label>State</label>
    {{input checked=model.state type="checkbox"}}
  </p>

  {{#if error}}
    <p>{{error}}</p>
  {{/if}}

  <p>
    <button {{action "create"}}>Create</button>
  </p>
</form>