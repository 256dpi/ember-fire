<form {{action "authenticate" on="submit"}}>
  <p>
    <label>Email</label>
    {{input value=email type="email"}}
  </p>

  <p>
    <label>Password</label>
    {{input value=password type="password"}}
  </p>

  {{#if error}}
    <p>{{error}}</p>
  {{/if}}

  <p>
    <button {{action "signIn"}}>Sign In</button>
  </p>
</form>