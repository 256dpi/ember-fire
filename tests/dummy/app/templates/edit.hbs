<h2>Edit Item</h2>

<Form
  @model={{this.model}}
  @onCancel={{transition "index"}}
  @onAbandon={{confirm "Abandon?"}}
  @onSubmit={{chain (save-model this.model) (transition "index")}}
  @onDelete={{confirm "Delete?" (chain (delete-model this.model) (transition "index"))}}
>
  <Item @model={{this.model}}/>
</Form>