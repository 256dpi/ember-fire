<h1>Edit Item</h1>

<form {{action "update" on="submit"}}>
  <p>
    <label>Name</label>
    {{input value=model.name placeholder="Name"}}
  </p>

  <p>
    <label>State</label>
    {{input checked=model.state type="checkbox"}}
  </p>

  {{#if error}}
    <p>{{error}}</p>
  {{/if}}

  <p>
    <button {{action "update"}}>Update</button>
    <button {{action "delete"}}>Delete</button>
  </p>
</form>